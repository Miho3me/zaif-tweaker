{
  "manifest_version":2,
  "name":"Zaif-Tweaker",
  "description":"痒い所に手が届くような拡張機能",
  "version":"0.0.4",
  "icons":{
    "16":"icons/icon16.png",
    "48":"icons/icon48.png"
  },
  "browser_action":{
    "default_icon":{
      "19":"icons/icon19.png",
      "38":"icons/icon38.png"
    },
    "default_title":"Zaif-Tweaker",
    "default_popup":"html/popup.html"
  },
  "content_scripts":[
    {
    "matches": ["https://zaif.jp/trade*","https://zaif.jp/token*","https://zaif.jp/event/mijinmagatama/trade/*"],
    "css":["html/css/popup.css"],
    "js":[
      "html/script/jquery-3.2.1.min.js",
      "html/script/chrome_storage_confirm.js",
      "html/script/script.js"
    ],
    "run_at":"document_end"
    }
  ],
  "background":{
    "scripts":["html/script/background.js"]
  },
  "permissions":[
    "storage"
  ]
}
